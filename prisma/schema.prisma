generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TelegramUser {
  id           Int           @id @unique
  telegramKeys TelegramKey[]
}

model TelegramKey {
  id                Int              @id @default(autoincrement())
  uniqueKey         String           @unique
  telegramChannelId BigInt           @unique
  description       String
  ownerId           Int
  discordChannels   DiscordChannel[] @relation("DiscordChannelTelegramKey")
  owner             TelegramUser     @relation(fields: [ownerId], references: [id])
}

model DiscordGuild {
  id             Int              @id @default(autoincrement())
  discordGuildId String           @unique
  name           String
  channels       DiscordChannel[]
}

model DiscordChannel {
  id               Int           @id @default(autoincrement())
  discordChannelId String        @unique
  guildId          Int
  name             String
  uniqueKeys       TelegramKey[] @relation("DiscordChannelTelegramKey")
  guild            DiscordGuild  @relation(fields: [guildId], references: [id])
}
